        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="0.5dip" android:color="#234a51" />
            <gradient android:angle="-90" android:startColor="#477fa6" android:endColor="#3b6b8f"  />

        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="0.5dip" android:color="#234a51" />
            <gradient android:angle="-90" android:startColor="#ae1c1a" android:endColor="#ae1c1a"  />
        </shape>
    </item>
